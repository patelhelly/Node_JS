<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instagram</title>
    <style>
        body{
            padding: 20px;
        }
        .heading{
            display: flex;
            align-items: center;
            gap: 20px;
        }
        .profile_img{
            width: 100px;
            height: 100px;
            border-radius: 50%;
        }
        button{
            margin-left: 50px;
            padding: 5px;
        }
        .posts{
            display: flex;
            gap: 50px;
        }
        .post_img{
            height: 230px;
            width: 230px;
        }
    </style>
</head>
<body>
    <div class="heading">
        <img src="<%= data.posts[0].image%>" alt="profile image" class="profile_img">
        <h1><%= data.name %></h1>
        <button>Follow</button>
        <button>Message</button>
    </div>
    <div class="following">
        <p>Followers : <%= data.followers %> &nbsp; &nbsp; &nbsp; 
            Following : <%= data.following %></p>
    </div>
    <hr/>
    <div class="posts">
        <% for(let post of data.posts) { %>
            <div>
                <img src="<%= post.image %>" alt="post image" class="post_img">
                <p>Likes : <%= post.likes %> &nbsp; &nbsp; &nbsp;
                    Comments : <%= post.comments %></p>
            </div>
        <% } %>
    </div>
</body>
</html>